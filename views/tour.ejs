    <script src="/js/button-controller.js" charset="utf-8"></script>
    <script src="/js/search-bar-magic.js" charset="utf-8"></script>
    <script src="/js/cellsizechanger.js" charset="utf-8"></script>
    <script src="/js/tour.js" charset="utf-8"></script>
    <script src="/js/particles.js"></script>
    <script src="/js/particles-integration.js"></script>
    <script src="js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fuse.js@7"></script>  <!-- for the fuzz search -->

</body>

</html>
